using System;

namespace lesson_3
{
    internal class Program
    {
        static void Main(string[] args)
        {

                    
        }
    
        static void Exmpl01()
        {
            string text = Console.ReadLine();

            string[] textArr = text.Split(' ');

            int k = 0;
            string[] letterArr = new string[textArr.Length];
            //какую букв начинаеться
            foreach (var item in textArr)
            {
                string fLetter = item[0].ToString();
                letterArr[k++] = fLetter;
            }
            //letterArr Н В Т И О В Н
            foreach (var item in letterArr)
            {
                int l = 0;
                Console.WriteLine("Буква " + item + ": ");
                for (int i = 0; i < letterArr.Length; i++)
                {
                    if (letterArr[i] == item)
                    {
                        l++;
                    }
                }
                Console.WriteLine("повторяется " + l + " раз ");
            }


        }    
    }
}
